/* pages/shop/category/category.wxss */
.shop_list {
    width: 90%;
    margin: 0 auto;
}

.shop_item {
    position: relative;
    width: 100%;
    height: 306rpx;
    margin-bottom: 10px;
}

.shop_bg {
    width: 100%;
    border-radius: 10px;
} 

.shop_catename {
    position: absolute;
    bottom: 0;
    /* right: 10px; */
    display: block;
    /* width: 100%; */
    width: calc(100% - 20rpx);
    height: 60rpx;
    background: rgba(0,0,0,0.5);
    text-align: right;
    padding-right: 20rpx;
    border-radius: 0 0 10px 10px;
    color: #fff;
    font-size: larger;
    font-weight: 550;
}